#!/usr/bin/env perl

use warnings;
use strict;

use FindBin;
use lib
    "$FindBin::Bin/../lib",
    "$FindBin::Bin/../local/lib/perl5",
;

use YAML qw( LoadFile );

use Plerd;

my $config_ref = LoadFile( "$FindBin::Bin/../conf/plerd.conf" );

my $plerd = Plerd->new(
    path     => $config_ref->{ path },
    title    => $config_ref->{ title },
    base_uri => URI->new ( $config_ref->{ base_uri } ),
);

$plerd->publish_all;
